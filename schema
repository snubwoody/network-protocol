version = "0.1.0"
service app

proc get_user(uuid) -> User

proc get_user{
  in: uuid,
  returns: User,
  error: ErrorCode
}

response GetUserResponse{
  headers: Header,
  data: User
  error: Error
}

struct Error{
  code: ErrorCode,
  message: string,
  details: string
}

struct User{
  id: uuid,
  email: string
}

enum ErrorCode{
  Unauthorized,
  UserNotFound
}
